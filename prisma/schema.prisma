// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id          Int     @id @default(autoincrement())
  username    String  @unique
  password    String
  nama        String?
  profile_pic String?

  petani    Petani[]
  produksi  Produksi[]
  produk    Produk[]
  cocoblog  Cocoblog[]
  pembeli   Pembeli[]
  transaksi Transaksi[]
  Scrap     Scrap[]
  devices   Device[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Petani {
  id       Int    @id @default(autoincrement())
  nama     String
  alamat   String
  no_hp    String
  RT       String
  RW       String
  id_admin Int
  password String? // for farmer login

  admin        Admin           @relation(fields: [id_admin], references: [id])
  produksi     Produksi[]
  sessions     DeviceSession[]
  packingLogs  PackingLog[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model Produksi {
  id        Int    @id @default(autoincrement())
  id_petani Int
  id_admin  Int
  produk    String
  jumlah    Int
  status    status @default(DIAYAK)

  petani    Petani   @relation(fields: [id_petani], references: [id])
  admin     Admin    @relation(fields: [id_admin], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UnitType {
  KG
  POUCH
}

model Produk {
  id        Int         @id @default(autoincrement())
  id_admin  Int
  nama      String
  link      String
  deskripsi String
  harga     Int         @default(0)
  jumlah    Int         @default(0)
  unit      UnitType    @default(KG)
  gambar    Gambar[]
  transaksi Transaksi[]

  admin     Admin    @relation(fields: [id_admin], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cocoblog {
  id       Int    @id @default(autoincrement())
  id_admin Int
  judul    String
  isi      String @db.Text

  admin     Admin    @relation(fields: [id_admin], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  gambar    Gambar[]
}

model Pembeli {
  id       Int    @id @default(autoincrement())
  id_admin Int
  nama     String
  alamat   String
  no_telp  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  admin     Admin       @relation(fields: [id_admin], references: [id])
  transaksi Transaksi[]
}

model Transaksi {
  id         Int @id @default(autoincrement())
  id_admin   Int
  id_pembeli Int
  id_produk  Int
  jumlah     Int
  harga      Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  admin   Admin   @relation(fields: [id_admin], references: [id])
  pembeli Pembeli @relation(fields: [id_pembeli], references: [id])
  produk  Produk  @relation(fields: [id_produk], references: [id])
}

model Gambar {
  id         Int       @id @default(autoincrement())
  idImagekit String    @unique
  nama       String
  url        String
  ProdukId   Int?
  produk     Produk?   @relation(fields: [ProdukId], references: [id])
  CocoblogId Int?
  cocoblog   Cocoblog? @relation(fields: [CocoblogId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Scrap {
  id            Int      @id @default(autoincrement()) 
  id_admin      Int
  minggu_ke     Int
  bulan         Int
  tahun         Int
  harga_rata    Int
  jumlah_total  Int
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  admin         Admin    @relation(fields: [id_admin], references: [id])
  @@unique([minggu_ke, bulan, tahun])
}

enum status {
  DIAYAK
  DIOVEN
  DISORTIR
  DIKEMAS
  SELESAI
}

model Device {
  id        Int      @id @default(autoincrement())
  id_admin  Int?
  name      String
  token     String   @unique
  threshold Float    @default(10.0)
  isReady   Boolean  @default(true)
  
  pendingCommand    String?  // JSON string for pending commands e.g. {"type": "TARE"}
  calibrationFactor Float    @default(2280.0)
  
  readings  LoadcellReading[]
  logs      PackingLog[]
  sessions  DeviceSession[]
  admin     Admin?    @relation(fields: [id_admin], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LoadcellReading {
  id        Int      @id @default(autoincrement())
  deviceId  Int
  weight    Float
  device    Device   @relation(fields: [deviceId], references: [id])
  createdAt DateTime @default(now())
}

model PackingLog {
  id        Int      @id @default(autoincrement())
  deviceId  Int
  petaniId  Int?     // nullable for backward compatibility with old logs
  weight    Float
  device    Device   @relation(fields: [deviceId], references: [id])
  petani    Petani?  @relation(fields: [petaniId], references: [id])
  createdAt DateTime @default(now())
}

model DeviceSession {
  id        Int       @id @default(autoincrement())
  deviceId  Int
  petaniId  Int
  startedAt DateTime  @default(now())
  endedAt   DateTime?
  isActive  Boolean   @default(true)
  
  device    Device    @relation(fields: [deviceId], references: [id])
  petani    Petani    @relation(fields: [petaniId], references: [id])
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  @@index([deviceId, isActive])
}
